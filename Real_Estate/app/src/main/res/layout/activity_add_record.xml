<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRecord">
    <com.blogspot.atifsoftwares.circularimageview.CircularImageView
        android:id="@+id/homei"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        app:c_border="true"
        app:c_border_width="1dp"
        app:c_border_color="@color/gray1"
        android:src="@drawable/ic_addphoto_black"
        android:layout_marginTop="15dp"/>


    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:hint="name"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/homei"></EditText>
    <EditText
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:hint="mobile no"
        android:inputType="phone"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/name"></EditText>
    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:hint="address"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/mobile"></EditText>
    <EditText
        android:id="@+id/sqft"
        android:layout_width="match_parent"
        android:hint="square foot"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/address"></EditText>
    <EditText
        android:id="@+id/balcony"
        android:layout_width="match_parent"
        android:hint="balcony"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/sqft"></EditText>
    <EditText
        android:id="@+id/bhk"
        android:layout_width="match_parent"
        android:hint="bhk"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/balcony"></EditText>
    <EditText
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:hint="price"
        android:inputType="number"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/bhk"></EditText>
    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:hint="date of adding house"
        android:inputType="date"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/price"></EditText>
    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:hint="what and why to sell"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="15dp"
        android:minHeight="90dp"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:layout_marginEnd="15dp"
        android:layout_below="@+id/date"></EditText>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_rectangle"
        android:padding="5dp"
        android:src="@drawable/ic_done_white"
        android:layout_margin="10dp"/>

</RelativeLayout>